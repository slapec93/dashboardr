<p id="notice"><%= notice %></p>

<h1>Charts</h1>

<table>
  <thead>
    <tr>
      <th>Position x</th>
      <th>Position y</th>
      <th>Width</th>
      <th>Height</th>
      <th>Title</th>
      <th>Dashboard</th>
      <th>Data source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charts.each do |chart| %>
      <tr>
        <td><%= chart.position_x %></td>
        <td><%= chart.position_y %></td>
        <td><%= chart.width %></td>
        <td><%= chart.height %></td>
        <td><%= chart.title %></td>
        <td><%= chart.dashboard %></td>
        <td><%= chart.data_source %></td>
        <td><%= link_to 'Show', chart %></td>
        <td><%= link_to 'Edit', edit_chart_path(chart) %></td>
        <td><%= link_to 'Destroy', chart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

