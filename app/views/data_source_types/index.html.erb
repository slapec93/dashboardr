<p id="notice"><%= notice %></p>

<h1>Data Source Types</h1>

<table>
  <thead>
    <tr>
      <th>Type name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_source_types.each do |data_source_type| %>
      <tr>
        <td><%= data_source_type.type_name %></td>
        <td><%= link_to 'Show', data_source_type %></td>
        <td><%= link_to 'Edit', edit_data_source_type_path(data_source_type) %></td>
        <td><%= link_to 'Destroy', data_source_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

